@using ProyectoFinal.Models
@model IEnumerable<Teacher>




@{
    if (Model.Count() < 1)
    {
        <p>No teachers in database yet</p>
        <p><a class="btn btn-warning" asp-action="AddTeacher">Add Teachers</a></p>
    }
    else
    {
        <p><a asp-action="AddTeacher" class="btn btn-warning">Add Teachers</a></p>
        <table class="table table-hover">
            <thead class="bg-info">
                <tr>
                    <th>Teacher Id</th>
                    <th>Teacher Name</th>
                    <th>Teacher DNI</th>
                    <th>Department</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.TeacherId</td>
                        <td>@t.TeacherName</td>
                        <td>@t.TeacherDNI</td>
                        <td>@t.Department.DepartmentName</td>
                        <td><a class="btn btn-warning" asp-action="EditTeacher" asp-route-id="@t.TeacherId">Edit teacher</a></td>
                        <td><a class="btn btn-danger" asp-action="DeleteTeacher" asp-route-id="@t.TeacherId">Delete teacher</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <p><a asp-controller="Secretary" asp-action="Index">Back to Home</a></p>
}