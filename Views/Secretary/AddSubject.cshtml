@using ProyectoFinal.ViewModels
@model SecretaryAddSubjectViewModel

<p><a asp-action="AllSubjects">Back to Subject List</a></p> 

<form asp-action="AddSubject" method="post">
    <div class="form-group">
    <label asp-for="Course.CourseName"></label>
    <input class="form-control" asp-for="Course.CourseName" />
    <br />
    <label asp-for="Course.Credits"></label>
    <input class="form-control" asp-for="Course.Credits" />
    <br />
    <label asp-for="Course.StartDate"></label>
    <input class="form-control" asp-for="Course.StartDate" />
    <br />
    <label asp-for="Course.EndDate"></label>
    <input class="form-control" asp-for="Course.EndDate" />
    <br />
    <label asp-for="Teacher.TeacherName"></label>
    <select class="form-control" asp-for="Teacher.TeacherId" asp-items="@Model.TeacherList"></select>
    <br />
    <label asp-for="Course.YearGrade"></label>
    <input class="form-control" asp-for="Course.YearGrade" />
    <br />
    <label asp-for="Course.Price"></label>
    <input class="form-control" asp-for="Course.Price" />
    <br />
    <label asp-for="Course.SeatCapacity"></label>
    <input class="form-control" asp-for="Course.SeatCapacity" />
    <br />
    <label asp-for="Course.Optional"></label>
    <input type="checkbox" asp-for="Course.Optional" />
    <br />
    </div>
    <button type="submit" class="btn btn-success">Add Subject</button>
</form>