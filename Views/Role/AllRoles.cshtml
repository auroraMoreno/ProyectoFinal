@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<p><a asp-action="AddRole">Add a role</a></p>

@{
    if (Model.Count() < 1)
    {
        <p>No role in database yet</p>
    }
    else
    {
        <h3>All roles</h3>
        <table border="1">
            <tr><th>Role Name</th></tr>
            @foreach (var r in Model)
            {
                <tr><td>@r.Name</td></tr>
            }
        </table>
    }
}
